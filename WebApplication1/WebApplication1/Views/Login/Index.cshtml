@model WebApplication1.Models.User

@{
    ViewBag.Title = "Login";
}
<div class="row">
    <div class="col-md-4 form-signin"></div>
    @using (@Html.BeginForm(null, null, FormMethod.Post, new { @class = "col-md-4 login-form" }))
    {
        {
            <div>
                @Html.LabelFor(model => model.Mail, "User mail: ")
                @Html.TextBoxFor(model => model.Mail, "User password: ", new { @class = "form-control", @placeholder = "Email address", @type = "email" })
            </div>
            <div>
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Zaloguj</button>
        }
    }
    <div class="col-md-4"></div>
</div>